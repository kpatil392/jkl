<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="12dp"
    android:layout_margin="5dp"
    xmlns:android="http://schemas.android.com/apk/res/android">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
   >
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_centerVertical="true"
        android:padding="7dp"
        android:id="@+id/iv_job"
        android:layout_width="@dimen/margin_80"
        android:src="@drawable/online"
        android:layout_gravity="center"
        android:layout_height="@dimen/margin_80"
         />

    <LinearLayout
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_marginStart="10dp"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        android:layout_toEndOf="@+id/iv_vendor_item"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="wrap_content">

        <LinearLayout
            android:weightSum="1"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
<TextView
    android:layout_weight="0.8"
    android:id="@+id/tv_job_title"
    android:gravity="start"
    android:layout_gravity="center"
    android:text="Job Title : Marketing"
    android:layout_width="match_parent"
    android:textSize="16sp"
    android:textStyle="bold"
    android:layout_height="wrap_content" />


            <ImageView
                android:id="@+id/iv_edit"
                android:layout_gravity="center"
                android:layout_weight="0.1"
                android:padding="@dimen/margin_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/edit"/>

            <ImageView
                android:id="@+id/iv_delete"
                android:layout_gravity="center"
                android:layout_weight="0.1"
                android:padding="@dimen/margin_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/cross"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:gravity="start"
                android:layout_gravity="center"
                android:text="@string/location_"
                android:layout_width="wrap_content"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_location"
                android:gravity="start"
                android:layout_gravity="center"
                android:text="@string/location"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_margin="3dp"
            android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_descriptiopn"
            android:gravity="start"
            android:text="Discription: Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s, when an unknown printer took a galle"
            android:layout_width="match_parent"
            android:textSize="16sp"
            android:lines="3"
            android:textStyle="normal"
            android:layout_height="wrap_content" />

           <!-- <TextView
                android:layout_toEndOf="@+id/tv_price"
                android:id="@+id/tv_pric"
                android:gravity="start"
                android:text="200 rs"
                android:layout_width="match_parent"
                android:textSize="16sp"
                android:textStyle="normal"
                android:layout_height="wrap_content" />-->
        </RelativeLayout>



    </LinearLayout>
</LinearLayout>
</android.support.v7.widget.CardView>