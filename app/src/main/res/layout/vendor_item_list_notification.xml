<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="12dp"
    android:layout_margin="5dp"
    xmlns:android="http://schemas.android.com/apk/res/android">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:orientation="horizontal"
   >
    <ImageView

        android:layout_centerVertical="true"
        android:padding="7dp"
        android:id="@+id/iv_vendor_item"
        android:layout_width="80dp"
        android:src="@drawable/online"
        android:layout_weight=".3"
        android:layout_height="80dp"
         />

    <LinearLayout
        android:gravity="center"
        android:layout_marginStart="10dp"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        android:layout_toEndOf="@+id/iv_vendor_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
<TextView
    android:id="@+id/name"
    android:gravity="start"
    android:text="ManishAtre"
    android:layout_width="match_parent"
    android:textSize="16sp"
    android:textStyle="bold"
    android:layout_height="wrap_content" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_price"
            android:gravity="start"
            android:text="Mobile : 976543210"
            android:layout_width="wrap_content"
            android:textSize="16sp"
            android:textStyle="normal"
            android:layout_height="wrap_content" />

            <TextView
                android:layout_below="@+id/tv_price"
                android:id="@+id/tv_pric"
                android:gravity="start"
                android:text="Email Id :abc@gmail.comn"
                android:layout_width="match_parent"
                android:textSize="16sp"
                android:textStyle="normal"
                android:layout_height="wrap_content" />

        </RelativeLayout>



    </LinearLayout>
</RelativeLayout>
</android.support.v7.widget.CardView>