<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:layout_height="200dp"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="12dp"
    android:layout_margin="5dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="horizontal">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">


              <ImageView

                android:id="@+id/iv_vendor_item"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_centerVertical="true"
                android:scaleType="fitXY"
                android:src="@drawable/offer_gold" />

            <TextView
               android:id="@+id/tv_name"
                android:layout_margin="15dp"
                android:text="Gold PLan"
                android:textSize="10pt"
                android:textStyle="bold"
                android:background="@android:color/transparent"                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                 />


        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_70"
            android:weightSum="2"
            android:background="#BA797777"
            android:layout_alignParentBottom="true"
            android:orientation="vertical"
            android:padding="7dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:padding="0dp">

                <TextView
                    android:id="@+id/tv_duration"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="0.5"
                    android:textColor="@color/white"
                    android:text="Duration" />

                <TextView
                    android:id="@+id/tv_type"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="0.5"
                    android:textColor="#FFFFFF"
                    android:text=" PLan Type" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:padding="0dp"
                >
                <TextView
                    android:id="@+id/tv_price"
                    android:layout_margin="5dp"
                    android:text="Gold PLan pRICE"
                    android:textColor="#FFFFFF"
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:layout_height="match_parent"
                    />
                <TextView
                    android:id="@+id/tv_limit"
                    android:layout_margin="5dp"
                    android:text="LIMIT"
                    android:textColor="#FFFFFF"
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:layout_height="match_parent"
                    />
            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>
</android.support.v7.widget.CardView>